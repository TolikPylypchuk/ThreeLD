@model ThreeLD.DB.Models.Event

@{
	Layout = ViewBag.Role != null
		? $"~/Views/{ViewBag.Role}/_Layout.cshtml"
		:  "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = $"{ViewBag.Action} an Event";
}

<h1>@ViewBag.Action an Event</h1>

<div>
	@Html.ValidationSummary(false)

	@using (Html.BeginForm())
    {
        <label>Name:</label>
		<div class="form-group">
			@Html.TextBoxFor(m => m.Name)
		</div>
        <label>Date and Time: </label>
		<div class="form-group">
			@Html.TextBoxFor(
				m => m.DateTime,
				"{0:yyyy-MM-ddTHH\\:mm\\:ss}",
				new {type = "datetime-local"})
		</div>
        <label>Duration: </label>
		<div class="form-group">
			@Html.TextBoxFor(m => m.Duration, "{0:hh\\:mm}")
		</div>
        <label>Address: </label>
		<div class="form-group">
			@Html.TextBoxFor(m => m.Address)
		</div>
        <label>URL: </label>
		<div class="form-group">
			@Html.TextBoxFor(m => m.Url)
		</div>
        <label>Description: </label>
		<div class="form-group">
			@Html.TextBoxFor(m => m.Description)
		</div>
        <label>Categories: </label>
		<div class="form-group">
			@Html.TextBoxFor(m => m.Category)
		</div>

		@Html.HiddenFor(m => m.Id)

		if (!String.IsNullOrEmpty(Model.ProposedBy))
		{
			Html.HiddenFor(m => m.ProposedBy);
		}

		<input type="submit" value="Submit" />
	}
</div>
