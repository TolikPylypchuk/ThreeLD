@model NotificationsViewModel

@{
    ViewBag.Title = Resources.ViewNotificationsTitle;
}

<h1>@Resources.ViewNotificationsHeader</h1>

<div class="container">
    <div class="row">
        <div class="col">
            @foreach (var n in Model.UnreadNotifications)
            {
                <ul class="list-group">
                    <li class="list-group-item">@n.Message</li>
                </ul>
            }
        </div>
        <div class="col">
            @foreach (var n in Model.UnreadNotifications)
            {
                using (Html.BeginForm(
					"CheckNotificationAsRead",
					"User",
					new { notificationId = n.Id }))
                {
                    <button type="submit" class="btn btn-info">
                        @Resources.NotificationsCheckAll
                    </button>
                }
            }
        </div>
    </div>
</div>

@foreach (var n in Model.ReadNotifications)
{
    <ul class="list-group">
        <li class="list-group-item">@n.Message</li>
    </ul>
}
