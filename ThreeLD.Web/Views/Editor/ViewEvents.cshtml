@model ThreeLD.Web.Models.ViewModels.ViewEventsUserModel

@{
    ViewBag.Title = "View Events";
}

<h2>ViewEvents</h2>
<div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Date and Time</th>
				<th>Duration</th>
				<th>Address</th>
				<th>Description</th>
				<th>Category</th>
				<th>URL</th>
				<th>Bookmark</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var e in Model.Events)
			{
				<tr>
					<td>@e.Key.Name</td>
					<td>@e.Key.DateTime</td>
					<td>@e.Key.Duration</td>
					<td>@e.Key.Address</td>
					<td>@e.Key.Description</td>
					<td>@e.Key.Category</td>
					<td><a href="@e.Key.Url" class="btn btn-link">Link</a></td>
					<td>
						@using (Html.BeginForm("EditEvent", "Editor"))
						{
							<button type="button" class="btn btn-success">Edit</button>
							@Html.Hidden("id", e.Key.Id)
						}
						@using (Html.BeginForm("DeleteEvent", "Editor"))
						{
							<button type="button" class="btn btn-danger">Delete</button>
							@Html.Hidden("id", e.Key.Id)
						}
					@if (e.Value)
					{
						using (Html.BeginForm("AddBookmark", "User"))
						{
							<button type="submit" class="btn btn-info">
								<span class="glyphicon glyphicon-heart"></span>
							</button>
							@Html.Hidden("eventId", e.Key.Id)
						}
					} else
					{
						using (Html.BeginForm("RemoveBookmark", "User"))
						{
							<button type="submit" class="btn btn-info">
								<span class="glyphicon glyphicon-heart-empty"></span>
							</button>
							@Html.Hidden("eventId", e.Key.Id)
						}
					}
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>