<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<title>@ViewBag.Title</title>

	<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/favicon.ico" rel="shortcut icon"  type="image/x-icon" />
</head>

<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle"
				        data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                    <span><img src="~/Content/favicon.png" height="35" alt="Logo" /></span>
                    <span>ThreeLD</span>
                </a>
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>
						@Html.ActionLink(
							"View Proposed Events",
							"ViewProposedEvents",
							"Editor",
							null,
							null)
					</li>
					<li>
						@Html.ActionLink(
							"Create an Event",
							"CreateEvent",
							"Editor",
							null,
							null)
					</li>
				</ul>

				<ul class="nav navbar-nav navbar-right">
					<li>
						@Html.ActionLink(
							"My Profile", "Profile", "User", null, null)
					</li>
					<li>
						@Html.ActionLink(
							"Log Out", "Logout", "Account", null, null)
					</li>
				</ul>
			</div>
		</div>
	</div>

	<div class="container body-content">
		@if (TempData.Keys.Contains("message"))
		{
			<div class="alert alert-success alert-dismissable">
				<a href="#" class="close" data-dismiss="alert" aria-label="close">
					<i class="glyphicon glyphicon-remove" aria-hidden="true"></i>
				</a>
				@TempData["message"]
			</div>
		}

		@if (TempData.Keys.Contains("error"))
		{
			<div class="alert alert-danger alert-dismissable">
				<a href="#" class="close" data-dismiss="alert" aria-label="close">
					<i class="glyphicon glyphicon-remove" aria-hidden="true"></i>
				</a>
				@TempData["error"]
			</div>
		}
		
		@RenderBody()

		<hr />

		<footer>
			<p>&copy; @DateTime.Now.Year - ThreeLD</p>
		</footer>
	</div>

	<script src="~/Scripts/modernizr-2.8.3.js"></script>
	<script src="~/Scripts/jquery-1.10.2.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
