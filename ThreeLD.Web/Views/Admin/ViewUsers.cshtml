@model ThreeLD.Web.Models.ViewModels.AdminUsersModel

@{
	ViewBag.Title = "Users";
}

<div class="panel panel-primary">
	<div class="panel-heading">
		User Accounts
	</div>
	<table class="table table-striped">
		<tr><th>ID</th><th>UserName</th><th>FirstName</th><th>LastName</th><th>Email</th></tr>
		@if (!Model.Users.Any())
		{
			<tr><td colspan="3" class="text-center">No User Accounts</td></tr>
		}
		else
		{
			foreach (var user in Model.Users.Keys)
			{
				<tr>
					<td>@user.Id</td>
					<td>@user.UserName</td>
					<td>@user.FirstName</td>
					<td>@user.LastName</td>
					<td>@user.Email</td>
					<td>
						@using (Html.BeginForm("DeleteUser", "Admin",
							new { id = user.Id }))
						{
							<button class="btn btn-danger btn-xs"
							        type="submit">
								Delete
							</button>
						}
					</td>
				</tr>
			}
		}
	</table>
</div>
